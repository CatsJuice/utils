{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "lib": ["esnext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir": ".temp",
    "declarationDir": "types",
    "declaration": true
  },
  "include": [
    "src/**/*.ts",
    "src/*.ts"
  ],
  "exclude": [
    "scripts",
    "**/*/*.test.ts"
  ]
}
